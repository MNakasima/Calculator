<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="10pt"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/etShowNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:gravity="right"
        android:paddingTop="30pt"
        android:text="0"
        android:textColor="@color/whiteBack"
        android:onClick="buNumberEvent"
        android:textSize="20pt"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/buAC"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="buNumberEvent"
                android:text="AC"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buPM"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="buNumberEvent"
                android:text="+/-"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buPercent"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="buNumberEvent"
                android:text="%"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buDiv"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/operations"
                android:onClick="buOpEvent"
                android:text="/"
                android:textColor="@color/whiteBack"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/bu7"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="buNumberEvent"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="buNumberEvent"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="buNumberEvent"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buMult"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/operations"
                android:onClick="buOpEvent"
                android:text="*"
                android:textColor="@color/whiteBack"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/bu4"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="buNumberEvent"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="buNumberEvent"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="buNumberEvent"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buSub"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/operations"
                android:onClick="buOpEvent"
                android:text="-"
                android:textColor="@color/whiteBack"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/bu1"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="buNumberEvent"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="buNumberEvent"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="buNumberEvent"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buSum"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/operations"
                android:onClick="buOpEvent"
                android:text="+"
                android:textColor="@color/whiteBack"
                android:textSize="24sp" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu0"
            android:layout_width="match_parent"
            android:layout_height="30pt"
            android:layout_weight="1.35"
            android:background="@color/whiteBack"
            android:onClick="buNumberEvent"
            android:text="0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buDot"
            android:layout_width="match_parent"
            android:layout_height="30pt"
            android:layout_weight="2"
            android:background="@color/whiteBack"
            android:onClick="buNumberEvent"
            android:text="."
            android:textSize="24sp" />

        <Button
            android:id="@+id/buEqual"
            android:layout_width="match_parent"
            android:layout_height="30pt"
            android:layout_weight="2"
            android:background="@color/operations"
            android:onClick="buEqualEvent"
            android:text="="
            android:textColor="@color/whiteBack"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>